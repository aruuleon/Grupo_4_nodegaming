<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {name, title}) %>
<body class="container-main">
    <%- include('../partials/headerUser.ejs') %>
    <main class="main">
        <section class="form">
            <form action="">
                <h3>crear cuenta</h3>
                <div>
                    <label for="nombre">Nombre</label>
                    <input class="input-edition" type="text" name="nombre" id="nombre" required>
                </div>
                <div>
                    <label for="apellido">Apellido</label>
                    <input class="input-edition" type="text" name="apellido" id="apellido" required>
                </div>
                <div>
                    <label for="email">Email</label>
                    <input class="input-edition" type="email" name="email" id="email" required>
                </div>
                <div>
                    <label for="telefono">Telefono</label>
                    <input class="input-edition" type="tel" name="telefono" id="telefono" required>
                </div>
                <div>
                    <label for="password">Contraseña</label>
                    <input class="input-edition" type="password" name="password" id="password" required>
                </div>
                <div>
                    <label for="confirmacion">Confirmar Contraseña</label>
                    <input class="input-edition" type="password" name="confirmacion" id="confirmacion" required>
                </div>
                <div class="registrarte">
                    <button type="submit">registrarte</button>
                </div>
                <div class="login">
                    <div>
                        <p>¿Ya tenés cuenta?</p>
                    </div>
                    <div>
                        <button type="button"><a href="/users/login">ingresar</a></button>
                    </div>
                </div>
            </form>
        </section>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>