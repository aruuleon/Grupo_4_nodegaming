<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs', {name, title}) %>
<body class="container-main">
    <%- include('../partials/headerMain.ejs') %>
    <main class="main">
        <div class="container-general">
            <div class="contenido">
                <section class="container-images">
                    <div class="imagenes-principales">
                        <div id="imagen1">
                            <img src="/img/products/<%= product.image_primary %>" alt="">
                        </div>
                        <div id="imagen2">
                            <img src="/img/products/<%= product.image_secondary %>" alt="">
                        </div>
                        <div id="imagen3">
                            <img src="/img/products/<%= product.image_tertiary %>" alt="">
                        </div>
                    </div>
                    <div class="imagenes-secundarias">
                        <div>
                            <a href="#imagen1">
                                <img src="/img/products/<%= product.image_primary %>" alt="">
                            </a>
                        </div>
                        <div>
                            <a href="#imagen2">
                                <img src="/img/products/<%= product.image_secondary %>" alt="">
                            </a>
                        </div>
                        <div>
                            <a href="#imagen3">
                                <img src="/img/products/<%= product.image_tertiary %>" alt="">
                            </a>
                        </div>
                    </div>
                </section>
                <section class="container-info">
                    <% if(product.stock > 0) { %>
                    <div class="stock">
                        <p>en stock</p>
                    </div>
                    <% } else {%>
                        <div class="sin_stock">
                            <p>sin stock</p>
                        </div>
                    <% } %>
                    <p class="name"><%= product.name %></p>
                    <div>
                        <% if(product.discount > 0) { %>
                        <div class="precio_descuento">
                            <p class="precio_real">$ <%= product.price %> </p>
                            <p class="discount"><%= product.discount %>% OFF</p>
                        </div>
                        <% } %>
                    </div>
                    <p class="precio">$ <%= product.price - ((product.discount * product.price) / 100) %> </p>
                    <div class="agregar">
                        <button type="button">agregar</button>
                    </div>
                    <br>
                    <div class="agregar">
                        <button type="button" class="productEdit">
                            <a href="/products/edit/<%= product.id %>">editar</a>
                        </button>
                    </div>
                </section>
            </div>
            <section class="container-caracteristicas">
                <h3>caracteristicas generales</h3>
                <div>
                    <p><%= product.description %></p>
                </div>
            </section>
        </div>
    </main>
    <%- include('../partials/footer.ejs') %>
</body>
</html>